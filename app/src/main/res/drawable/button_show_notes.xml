<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed state -->
    <item  android:state_pressed="true">
        <layer-list>

            <!-- Content layer -->
            <item android:drawable="@drawable/button_pressed_layer"/>

            <!-- Icon layer -->
            <item>
                <bitmap android:gravity="center" android:src="@drawable/view_note_icons"/>
            </item>

        </layer-list>
    </item>

    <!-- Default state -->
    <item>
        <layer-list>

            <!-- Shadow layer -->
            <item android:left="@dimen/button_shadow_layer_left_margin"
                android:top="@dimen/button_shadow_layer_top_margin"
                android:drawable="@drawable/button_shadow_layer"/>

            <!-- Content layer -->
            <item android:drawable="@drawable/button_default_layer"/>

            <!-- Icon layer -->
            <item>
                <bitmap android:gravity="center" android:src="@drawable/view_note_icons"/>
            </item>

        </layer-list>
    </item>
</selector>