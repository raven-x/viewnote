<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed state -->
    <item  android:state_pressed="true">
        <layer-list>
            <!-- Content layer -->
            <item android:drawable="@drawable/button_pressed"/>

            <item android:width="50dp" android:height="50dp" android:gravity="center">
                <bitmap android:src="@drawable/view_note_icons"
                        android:width="50dp"
                        android:height="50dp"/>
            </item>
        </layer-list>
    </item>

    <!-- Default state -->
    <item>
        <layer-list>
            <!-- Shadow layer -->
            <item android:left="5dp" android:top="5dp">
                <shape android:shape="oval">
                    <size android:height="@dimen/button_size" android:width="@dimen/button_size"/>
                    <solid android:color="#66000000"/>
                </shape>
            </item>

            <!-- Content layer -->
            <item android:drawable="@drawable/button_default"/>

            <!-- Icon layer -->
            <item android:width="10dp" android:height="10dp" android:gravity="center">
                <bitmap android:src="@drawable/view_note_icons"/>
            </item>
        </layer-list>
    </item>
</selector>