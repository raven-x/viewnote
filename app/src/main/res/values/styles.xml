<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <!-- Toolbar style -->
    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/toolbar</item>
    </style>

    <!-- Note entry message text style -->
    <style name="NoteEntryMessage">
        <item name="android:lines">1</item>
        <item name="android:fontFamily">Roboto Regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingRight">52dp</item>
    </style>

    <!-- Note entry date text style -->
    <style name="NoteEntryDate">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingRight">52dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
        <item name="android:fontFamily">Roboto Regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>
    
    <!-- Note view text style -->
    <style name="NoteViewTextStyle">
        <item name="android:singleLine">false</item>
        <item name="android:lines">3</item>
        <item name="android:layout_marginTop">@dimen/note_view_textbox_margin</item>
        <item name="android:layout_marginLeft">@dimen/note_view_textbox_margin</item>
        <item name="android:layout_marginRight">@dimen/note_view_textbox_margin</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:scrollbars">vertical</item>
    </style>

</resources>
